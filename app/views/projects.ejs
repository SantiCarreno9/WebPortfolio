                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen>
                </iframe>
            </div>
        </div>

        <!--Cookie-->
        <div class="row" style="background-color: var(--secondary-color);">
            <div class="column">
                <!-- YouTube Frame -->
                <iframe width="560" height="315" src="https://www.youtube.com/embed/zUrW9RkVLnM?si=i2NP5k0hVhGbtMtc"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen>
